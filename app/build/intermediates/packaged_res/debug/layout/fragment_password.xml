<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/password_reset_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/new_password_reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="New Password"
        android:textColor="@color/black"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/password_reset_email"
        app:layout_constraintStart_toStartOf="@+id/password_reset_email"
        app:layout_constraintTop_toBottomOf="@+id/password_reset_email" />

    <EditText
        android:id="@+id/password_new_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/new_password_reset"
        app:layout_constraintEnd_toEndOf="@+id/password_reset_email_input"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/password_reset_email_input"
        app:layout_constraintTop_toTopOf="@+id/new_password_reset" />

    <TextView
        android:id="@+id/confirm_password_reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Confirm Password"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/new_password_reset"
        app:layout_constraintStart_toStartOf="@+id/new_password_reset"
        app:layout_constraintTop_toBottomOf="@+id/new_password_reset" />

    <EditText
        android:id="@+id/confirm_password_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/confirm_password_reset"
        app:layout_constraintEnd_toEndOf="@+id/password_new_input"
        app:layout_constraintStart_toStartOf="@+id/password_new_input"
        app:layout_constraintTop_toTopOf="@+id/confirm_password_reset" />

    <EditText
        android:id="@+id/password_reset_email_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@+id/password_reset_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/password_reset_email"
        app:layout_constraintTop_toTopOf="@+id/password_reset_email" />

    <Button
        android:id="@+id/password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="RESET PASSWORD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/confirm_password_reset"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_reset" />
</androidx.constraintlayout.widget.ConstraintLayout>