<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/register_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:text="Full name "
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newname_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/register_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/register_name"
        app:layout_constraintTop_toTopOf="@+id/register_name" />

    <TextView
        android:id="@+id/newusername_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Username"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/register_name"
        app:layout_constraintStart_toStartOf="@+id/register_name"
        app:layout_constraintTop_toBottomOf="@+id/register_name" />

    <TextView
        android:id="@+id/newemail_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Email"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/newusername_register"
        app:layout_constraintStart_toStartOf="@+id/newusername_register"
        app:layout_constraintTop_toBottomOf="@+id/newusername_register" />

    <EditText
        android:id="@+id/newusername_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/newusername_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/newname_input"
        app:layout_constraintTop_toTopOf="@+id/newusername_register" />

    <EditText
        android:id="@+id/newemail_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@+id/newemail_register"
        app:layout_constraintEnd_toEndOf="@+id/newusername_input"
        app:layout_constraintStart_toStartOf="@+id/newusername_input"
        app:layout_constraintTop_toTopOf="@+id/newemail_register" />

    <TextView
        android:id="@+id/password1_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Password"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/newemail_register"
        app:layout_constraintStart_toStartOf="@+id/newemail_register"
        app:layout_constraintTop_toBottomOf="@+id/newemail_register" />

    <EditText
        android:id="@+id/password1_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/password1_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/newemail_input"
        app:layout_constraintTop_toTopOf="@+id/password1_register" />

    <TextView
        android:id="@+id/password2_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Confirm Password"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/password1_register"
        app:layout_constraintStart_toStartOf="@+id/password1_register"
        app:layout_constraintTop_toBottomOf="@+id/password1_register" />

    <EditText
        android:id="@+id/password2_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/password2_register"
        app:layout_constraintEnd_toEndOf="@+id/password1_input"
        app:layout_constraintStart_toStartOf="@+id/password1_input"
        app:layout_constraintTop_toTopOf="@+id/password2_register" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/newemail_input"
        app:layout_constraintStart_toStartOf="@+id/newemail_register"
        app:layout_constraintTop_toBottomOf="@+id/password2_input" />
</androidx.constraintlayout.widget.ConstraintLayout>